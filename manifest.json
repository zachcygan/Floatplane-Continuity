{
    "manifest_version": 2,
    "name": "Floatplane Video Progress Saver",
    "version": "1.0",
    "description": "Saves video progress on floatplane.com and allows you to resume playback.",
    "permissions": [
        "tabs",
        "storage",
        "https://www.floatplane.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.floatplane.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png"
    },
    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    }
}
  